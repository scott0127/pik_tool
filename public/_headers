# Caching for static assets
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

/favicon.jpg
  Cache-Control: public, max-age=31536000, immutable

/og-image.png
  Cache-Control: public, max-age=604800

# Cache data files (check if they change often - assuming they are relatively static)
/data/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=86400, must-revalidate

# Nuxt build assets (hashed)
/_nuxt/*
  Cache-Control: public, max-age=31536000, immutable

/sw.js
  Cache-Control: no-cache
